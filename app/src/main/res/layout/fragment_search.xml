<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/search_song_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/search_view_rounder"
        android:backgroundTint="@color/search"
        android:padding="5dp"
        android:queryHint="@string/song_and_artist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />

    <Button
        android:id="@+id/btn_search_online"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/online_color"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/online"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btn_search_library"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_song_artist"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <Button
        android:id="@+id/btn_search_library"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@color/library"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/library"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_search_online"
        app:layout_constraintTop_toBottomOf="@+id/search_song_artist" />
</androidx.constraintlayout.widget.ConstraintLayout>